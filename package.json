{
    "name": "rustbot",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "description": "RustBot Dashboard",
    "scripts": {
        "install:all": "npm install && npm run install:frontend && npm run install:backend",
        "install:frontend": "cd frontend && npm install",
        "install:backend": "cd backend && npm install",
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "build": "cd frontend && npm run build",
        "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
        "start:frontend": "cd frontend && npm run start",
        "start:backend": "cd backend && npm run prod",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop all && pm2 delete all",
        "clean": "rimraf frontend/dist frontend/node_modules backend/node_modules node_modules",
        "update": "git pull origin main && cd frontend && npm run build && cd .. && pm2 restart all"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "rimraf": "^5.0.5"
    },
    "dependencies": {
        "react-toastify": "^11.0.5",
        "sequelize": "^6.37.1",
        "sqlite3": "^5.1.7",
        "uuid": "^11.1.0"
    },
    "resolutions": {
        "uuid": "^11.1.0",
        "glob": "^10.3.10",
        "inflight": "^2.0.0",
        "request": "^2.88.2",
        "request-promise": "^4.2.6",
        "har-validator": "^5.1.5"
    }
}
